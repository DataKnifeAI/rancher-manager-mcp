version: '3.8'

services:
  rancher-mcp:
    # Build locally:
    # build: .
    # Or use pre-built image from Harbor:
    image: harbor.dataknife.net/library/rancher-mcp:latest
    container_name: rancher-mcp
    ports:
      - "8080:8080"
    environment:
      - RANCHER_URL=${RANCHER_URL}
      - RANCHER_TOKEN=${RANCHER_TOKEN}
      - RANCHER_INSECURE_SKIP_VERIFY=${RANCHER_INSECURE_SKIP_VERIFY:-false}
      - LOG_LEVEL=${LOG_LEVEL:-info}
    command: ["--transport", "http", "--http-addr", ":8080"]
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "wget", "--quiet", "--tries=1", "--spider", "http://localhost:8080/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
